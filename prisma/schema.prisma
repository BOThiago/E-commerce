// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model registro {
  id              Int          @id @default(autoincrement())
  nome            String
  email           String
  telefone        BigInt
  endereco        String
  numero          Int
  bairro          String
  cidade          String
  password        String
  change_password Boolean?     @default(true)
  permissoes      permissoes[]
}

model permissoes {
  id                     Int      @id @default(autoincrement())
  permissoes_id          Int
  descricao_da_permissao String
  login                  registro @relation(fields: [permissoes_id], references: [id])
}

model produtos {
  id            Int       @id @default(autoincrement())
  nome_prod     String
  desc_prod     String
  qtd_embalagem Int
  qtd_estoque   estoque[]
}

model estoque {
  id          Int      @id @default(autoincrement())
  produto_id  Int
  qtd_estoque Int
  estoque     produtos @relation(fields: [produto_id], references: [id])
}
